<%= form_with(model: ambiente, local: true, class: "max-w-lg space-y-4") do |form| %>
  <% if ambiente.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2><%= pluralize(ambiente.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% ambiente.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, "Nome do Ambiente", class: "block font-semibold mb-1" %>
    <%= form.text_field :nome, class: "w-full border p-2 rounded shadow" %>
  </div>

  <div>
    <%= form.label :type, "Tipo de Ambiente", class: "block font-semibold mb-1" %>
    <%= form.select :type, options_for_select([["Departamento", "Departamento"], ["Área Comum", "AreaComum"]], ambiente.type), prompt: "Selecione o tipo", class: "w-full border p-2 rounded shadow" %>
  </div>

  <div>
    <%= form.submit class: "bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded" %>
  </div>
<% end %>
