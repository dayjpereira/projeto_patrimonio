<%= form_with(model: patrimonio, class: "max-w-xl mx-auto mt-8") do |form| %>
  <% if patrimonio.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
      <h2 class="font-bold"><%= pluralize(patrimonio.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul class="list-disc pl-5">
        <% patrimonio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :nome, class: "block font-semibold text-lg mb-1" %>
    <%= form.text_field :nome, class: "w-full border p-2 rounded shadow" %>
  </div>

  <div class="mb-4">
    <%= form.label :descricao, class: "block font-semibold text-lg mb-1" %>
    <%= form.text_field :descricao, class: "w-full border p-2 rounded shadow" %>
  </div>

  <div class="mb-4">
    <%= form.label :placa, class: "block font-semibold text-lg mb-1" %>
    <%= form.text_field :placa, class: "w-full border p-2 rounded shadow" %>
  </div>

  <div class="mb-4">
    <%= form.label :data_aquisicao, class: "block font-semibold text-lg mb-1" %>
    <%= form.date_field :data_aquisicao, class: "w-full border p-2 rounded shadow" %>
  </div>

  <div class="mb-4">
    <label class="font-semibold text-lg block mb-1">Tipo de Ambiente:</label>
    <label class="mr-4">
      <%= radio_button_tag :ambiente_tipo, 'Departamento', true, id: 'radio_departamento', class: "mr-1" %>
      Departamento
    </label>
    <label>
      <%= radio_button_tag :ambiente_tipo, 'AreaComum', false, id: 'radio_area_comum', class: "mr-1" %>
      Área Comum
    </label>
  </div>

  <div class="mb-4">
    <%= form.label :ambiente_id, "Ambiente", class: "block font-semibold text-lg mb-1" %>
    <%= select_tag 'patrimonio[ambiente_id]', '', id: 'ambiente_select', class: "w-full border p-2 rounded shadow", prompt: "Selecione um ambiente" %>
  </div>

  <div class="mb-6">
    <%= form.label :funcionario_id, "Funcionário", class: "block font-semibold text-lg mb-1" %>
    <%= select_tag 'patrimonio[funcionario_id]', '', id: 'funcionario_select', class: "w-full border p-2 rounded shadow", prompt: "Selecione um funcionário" %>
  </div>

  <div>
    <%= form.submit "Create Patrimonio", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
