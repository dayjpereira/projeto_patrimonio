<%= form_with(model: patrimonio, class: "max-w-7xl mx-auto mt-8 bg-white p-6 rounded shadow") do |form| %>
  <% if patrimonio.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
      <h2 class="font-bold"><%= pluralize(patrimonio.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul class="list-disc pl-5">
        <% patrimonio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <!-- Grid 2 colunas para os campos de topo -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    
    <div>
      <%= form.label :nome, class: "block font-semibold mb-1" %>
      <%= form.text_field :nome, class: "w-full border p-2 rounded shadow" %>
    </div>

    <div>
      <%= form.label :placa, "Nº da Placa", class: "block font-semibold mb-1" %>
      <%= form.text_field :placa, class: "w-full border p-2 rounded shadow" %>
    </div>

    <div>
      <%= form.label :valor, "Valor", class: "block font-semibold mb-1" %>
      <%= form.text_field :valor, class: "w-full border p-2 rounded shadow" %>
    </div>

    <div>
      <%= form.label :data_aquisicao, "Data de Compra", class: "block font-semibold mb-1" %>
      <%= form.date_field :data_aquisicao, class: "w-full border p-2 rounded shadow" %>
    </div>
    </div>
  <!-- Campo Tipo de Ambiente -->
  <div class="mb-6">
    <label class="font-semibold block mb-2">Tipo de Ambiente:</label>
    <div class="flex space-x-6">
      <label class="flex items-center">
        <%= radio_button_tag :ambiente_tipo, 'Departamento', true, id: 'radio_departamento', class: "mr-2" %>
        Departamento
      </label>
      <label class="flex items-center">
        <%= radio_button_tag :ambiente_tipo, 'AreaComum', false, id: 'radio_area_comum', class: "mr-2" %>
        Área Comum
      </label>
    </div>
  </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <%= form.label :ambiente_id, "Departamento", class: "block font-semibold mb-1" %>
        <%= select_tag 'patrimonio[ambiente_id]', options_for_select([]), id: 'ambiente_select', class: "w-full border p-2 rounded shadow", prompt: "Selecione um ambiente" %>
      </div>

      <div>
        <%= form.label :funcionario_id, "Funcionário", class: "block font-semibold mb-1" %>
        <%= select_tag 'patrimonio[funcionario_id]', '', id: 'funcionario_select', class: "w-full border p-2 rounded shadow", prompt: "Selecione um funcionário" %>
      </div>
    </div>
  <!-- Campo Descrição (largura total) -->
  <div class="mb-6">
    <%= form.label :descricao, "Descrição do Produto", class: "block font-semibold mb-1" %>
    <%= form.text_area :descricao, class: "w-full border p-2 rounded shadow", rows: 4 %>
  </div>

  <div>
    <%= form.submit "Criar Patrimônio", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Voltar", patrimonios_path, class: "ml-4 text-gray-700 hover:underline" %>
  </div>
<% end %>
